<% for event in @events: %>
  <div class="event span8">
    <div class="profile_img_thumb span1">
      <a href='<%= "#{event.user.url}" %>'>
        <img class="profile_img_thumb" src=<%= "#{event.user.image || ''}" %>></img>
      </a>
    </div>
    <div class="span6">
      <p class="suggestion">Let's go...</p>
      <%= event.description_short %>
    </div>
  </div>
<% end %>
