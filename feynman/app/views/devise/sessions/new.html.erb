<h2>Sign in</h2>
<div class="left-div">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="controls">
        <%= f.text_field :login, :placeholder => "username or email" %>
      </div>

      <div class="controls">
        <%= f.password_field :password, :placeholder => "password" %>
      </div>

    <% if devise_mapping.rememberable? -%>
      <div class="controls">
        <%= f.label :remember_me, :class => "control-label" %>
          <%= f.check_box :remember_me %>
        <br />
        <br />
      </div>
    <% end -%>
    <div class="controls" style="text-align:left">
      <%= f.submit "Sign in", :class => 'btn btn-primary btn-large filter_deals' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

<style>
  #user_login {
    font-size: 1.25em;
    height: 1.25em;
  }

  #user_password {
    font-size: 1.25em;
    height: 1.25em;
  }

  .control-label {
    float: left;
  }

  #user_remember_me {
    float: left;
    margin-left: 20px;
    display: block;
  }
</style>