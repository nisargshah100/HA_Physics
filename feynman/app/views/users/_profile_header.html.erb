  <div class="span4">
    <div class="profile_img">
      <img class="profile_img" src=<%= "#{user.image}" %>></img>
    </div>
  </div>
  <div class="span4">
    <%= content_tag "div", class: "user_meta" do %>
      <p class="profile_display_name" id="display_name"><%= "#{user.display_name}" %></p>
      <p class="profile_user_details"><%= "#{user.age}, #{user.gender.capitalize}, #{user.orientation}" %></p>
      <p class="profile_user_details"><%= "#{user.location}" %></p>
    <% end %>
  </div>
