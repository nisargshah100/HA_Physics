<div class="well profile_container">
  <div class="row-fluid">
    <%= render "profile_header", user: @user %>
    <div class="span4 profile_action_container">
      <p><a class="btn btn-primary btn-large profile_action">Message</a></p>
      <p><a class="btn btn-primary btn-large profile_action">Ask <%= "#{@user.objective_pronoun}" %> out</a></p>
      <p><a class="btn btn-info btn-large profile_action">Favorite</a></p>
    </div>
  </div>

  <div class="row-fluid">
    <h1>My Dates</h1>
    <div id="events"></div>
  </div>

  <br />
  
  <div class="row-fluid">
    <div class="span4">
      <h2>About Me</h2>
      <ul class="profile_about_me">
        <li>Career: <%= @user.employment %></li>
        <li>Education: <%= @user.education %></li>
        <li>Faith: <%= @user.faith %></li>
        <li>Politics: <%= @user.political_affiliation %></li>
        <li>Race/Ethnicity: <%= @user.race %></li>
        <li>Children: <%= @user.children_preference %></li>
        <li>Height: <%= @user.height %></li>
      </ul>
    </div>
    <div class="span8">
    </div>
  </div>
</div>

<script type="text/javascript">
  new App.Events()
</script>

<style>
  .profile_container {
    margin-top:15px;
    background: #EEE;
  }

  p.profile_display_name {
    color: #E86D45;
    font-size: 2.5em;
    font-weight: bold;
    padding: 15px 0px;
  }

  p.profile_user_details {
    font-size: 1.5em;
    padding-bottom:5px;
  }

  ul.profile_about_me {
    list-style-type: none;
  }

  a.profile_action {
    width: 150px;
    font-size: 1.25em;
  }

  .profile_action_container {
    text-align:right;
  }
</style>