<p class="signup_form">
  <div class="control-group">
    <%= u.label :birthday, :class => "control-label" %>
    <div class="controls">
      <%= u.date_select(:birthday, { :order => [:month, :day, :year], :start_year => Time.now.year, :end_year => 1913, :default => {:year => 1994} }, {:class => "birthday"} ) %>
    </div>
  </div>
  <div class="control-group">
    <%= u.label :display_name, :class => "control-label" %>
    <div class="controls">
      <%= u.text_field :display_name %>
    </div>
  </div>
  <%= fields_for :user do |user| %>
    <div class="control-group">
      <%= user.label :email, :class => "control-label" %>
      <div class="controls">
        <%= user.text_field :email %> 
      </div>
    </div>
    <div class="control-group">
      <%= user.label :password, :class => "control-label" %>
      <div class="controls">
        <%= user.password_field :password %> 
      </div>
    </div>
  <% end %>

</p>

<style>
  .birthday {
    width: 100px;
  }

  label {
    font-size: 1.25em;
  }

  #user_detail_birthday_2i {
    width: 150px;
  }
</style>